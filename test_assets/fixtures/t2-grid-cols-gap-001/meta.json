  "case_id": "t2-grid-cols-gap-001",
  "title": "Grid columns + gap change",
  "category": [
    "layout",
    "spacing"
  ],
  "complexity": "medium",
  "mutations": [
    {
      "target": ".grid",
      "property": "grid-template-columns",
      "from": "repeat(3, 1fr)",
      "to": "repeat(2, 1fr)",
      "delta": "medium"
    },
    {
      "target": ".grid",
      "property": "gap",
      "from": "20px",
      "to": "28px",
      "delta": "small"
    }
  ],
  "expectations": [
    {
      "label": "layout.structure",
      "severity": "medium"
    }
  ],
  "assertions": {
    "pixel_regions_min": 1
  },
  "viewport": {
    "width": 1280,
    "height": 720,
    "device_scale_factor": 1
  }
}
